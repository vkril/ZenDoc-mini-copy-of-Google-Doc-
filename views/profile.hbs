  text-decoration: none;
}

/* visited link */
.doc-link:visited {
  color: lightgray;
}

/* mouse over link */
.doc-link:hover {
  color: lightgray;
}

/* selected link */
.doc-link:active {
  color: white;
}

</style>
<body>

	<div class="menu">
		<nav>
			<ul>
				<li><a href="./doc_editor">Create New Document</a></li>
				<li><a href="#">Complaints</a>

					<ul>

						<li><a href="./complaintou">Complaint About Ordinary User</a></li>
						<li><a href="./complaintdoc">Complaint About Documents</a></li>

					</ul>
				</li>

					<li><a href="/alldocuments">All Documents</a></li>
					<li><a href="/logout">Logout</a></li>

				</li>
			</ul>
		</nav>
	</div>
  {{!-- {{results.1.first_name}} --}}
		<section></section>
		<div>
			<form class="search-container">
				<input type="text" id="search-bar1" placeholder="Search for documents">
				<button type="submit" class="search-button"><img class="search-icon" src="http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png"></button>
			</form>

			<form class="search-container">
				<input type="text" id="search-bar2" placeholder="Search for users">
				<button type="submit" class="search-button"><img class="search-icon" src="http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png"></button>
			</form>
		</div>
		<section></section>
    
		

        <div class="main-div">
			<div class="image">
				<img height="200" width="200" src="/images/{{user.image_name}}">
		</div>
		<div style="float:left">
            <h2>General Information</h2>
        
            <div class="sub-div">
                <p class="info">Name: {{user.first_name}} {{user.last_name}}</p>
                <p class="info">Username: {{user.username}}</p>
                <p class="info">My reason to become OU: {{user.whyOU}}</p>
            </div>

