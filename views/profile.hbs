            <div class="sub-div">
                <p class="info">Email: {{user.email}}</p>
            </div>
        
            <h2>Documents</h2>
            <div class="sub-div">
                {{#each files}}
					<a class="doc-link" href={{this.url}}>
						<p class="info">{{this.file_name}}</p>
					</a>
		    	{{/each}}
            </div>
			</div>
	    </div>
		
    </body>
    <script src="/js/auto-complete.min.js"></script>
<script>
	var users = [];
	fetch("/users")
	.then(response => response.json())
	.then(response => {
		users = response;
	})
	.catch(err => {
		users = [];
	})
	new autoComplete({
    selector: '#search-bar2',
    minChars: 1,
	source: function(term, suggest){
        term = term.toLowerCase();
        var matches = [];
        for (i=0; i<users.length; i++)
            if (~users[i].first_name.toLowerCase().indexOf(term)) matches.push(users[i]);
        suggest(matches);
    },
	renderItem: function (item, search){
        search = search.replace(/[-\/\\^$*+?.()|[\]{}]/g, '\\$&');
        var re = new RegExp("(" + search.split(' ').join('|') + ")", "gi");
        return '<div class="autocomplete-suggestion" data-url="'+item.url+'" > '+item.first_name+'</div>';
    },
    onSelect: function(e, term, item){
        var value = item.getAttribute("data-url");
		window.location.href = value;
    }
	});

	var files = [];
	fetch("/docs")
	.then(response => response.json())
	.then(response => {
		files = response;
	})
	.catch(err => {
		files = [];
	})
	new autoComplete({
    selector: '#search-bar1',
    minChars: 1,
	source: function(term, suggest){
        term = term.toLowerCase();
        var matches = [];
        for (i=0; i<files.length; i++)
            if (~files[i].file_name.toLowerCase().indexOf(term)) matches.push(files[i]);
        suggest(matches);
    },
	renderItem: function (item, search){
        search = search.replace(/[-\/\\^$*+?.()|[\]{}]/g, '\\$&');
        var re = new RegExp("(" + search.split(' ').join('|') + ")", "gi");
        return '<div class="autocomplete-suggestion" data-url="'+item.url+'" > '+item.file_name+'</div>';
    },
    onSelect: function(e, term, item){
        var value = item.getAttribute("data-url");
		window.location.href = value;
    }
	});

</script>
